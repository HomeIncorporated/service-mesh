{
  "service": {
    "name": "service-a",
    "tags": [
      "go",
      "production"
    ],
    "port": 80,
    "connect": {
      "sidecar_service": {
        "proxy": {
          "upstreams": [
            {
              "destination_name": "service-b",
              "local_bind_port": 8788
            },
            {
              "destination_name": "service-c",
              "local_bind_port": 8791
            }
          ]
        }
      }
    },
    "check": {
      "id": "service-a",
      "name": "service-a TCP on port 80",
      "tcp": "service-a:80",
      "interval": "10s",
      "timeout": "1s"
    }
  }
}